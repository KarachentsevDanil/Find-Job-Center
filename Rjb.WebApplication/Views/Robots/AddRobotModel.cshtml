@using Rjb.WebApplication.Models
@model RJB.BLL.Models.RobotModelViewModel
@{
    ViewBag.Title = "Add Robot Model";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("AddRobotModel", "Robots", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Create a new robot model.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name,
            new { @class = "col-md-2 col-md-offset-2 control-label" })
        <div class="col-md-6 ">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description,
            new { @class = "col-md-2 col-md-offset-2 control-label" })
        <div class="col-md-6 ">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 col-md-offset-2 control-label">Specialization</label>
        <div class="col-md-6 ">
            <select id="SpecializationId" class="form-control" name="SpecializationId" required>
                @foreach (var specialization in Model.Specializations)
                {
                    <option value="@specialization.SpecializationId">@specialization.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
            <input type="submit" class="form-control btn btn-default" value="Add robot model" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
