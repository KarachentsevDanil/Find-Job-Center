@model FJB.Domain.Entities.Users.Client
@{
    ViewBag.Title = "Register Client";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterClient", "Users", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="col-sm-6 col-sm-offset-3" style="margin-top: 15px;">
        <div class="column" style="margin-top: 5px;">
            <div class="ui raised segment">
                <div class="ui blue right ribbon label">
                    <i class="registered icon"></i> Register Client
                </div>

                <h3 style="margin-top: -20px;">Register Client</h3>
                <div class="ui form">
                    <div class="field">
                        <label>Full Name</label>
                        <div class="ui left icon input">
                            <input type="text" name="FullName" id="FullName" placeholder="Full Name" required>
                            <i class="user icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <label>Username</label>
                        <div class="ui left icon input">
                            <input type="text" name="UserName" id="UserName" placeholder="Username" required>
                            <i class="user icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <label>Password</label>
                        <div class="ui left icon input">
                            <input type="password" name="Password" id="Password" placeholder="Password" required pattern="[A-Za-z0-9]{6,}">
                            <i class="lock icon"></i>
                        </div>
                    </div>
                    <div class="margin-left-center">
                        <button type="submit" class="ui blue submit button">Register Client</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
