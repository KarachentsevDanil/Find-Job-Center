@using RJB.BLL.Models
@model UserLoginModel
@{
    ViewBag.Title = "Log in";
}

<h4>Sign in to your account.</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#client">Client</a></li>
            <li><a data-toggle="tab" href="#company">Company</a></li>
        </ul>

        <div class="tab-content">
            <div id="client" class="tab-pane fade in active">
                <section id="clientLoginForm">
                    @using (Html.BeginForm("LoginClient", "Users", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-sm-6" style="margin-top: 5px">
                            <div class="ui form">
                                <h3>Sign in to your account</h3>
                                <div class="field">
                                    <label>Username</label>
                                    <div class="ui left icon input">
                                        <input type="text" name="UserName" id="UserName" placeholder="Username" required>
                                        <i class="user icon"></i>
                                    </div>
                                </div>
                                <div class="field">
                                    <label>Password</label>
                                    <div class="ui left icon input">
                                        <input type="password" name="Password" id="Password" placeholder="Password" required>
                                        <i class="lock icon"></i>
                                    </div>
                                </div>

                                <button type="submit" class="ui blue submit button">Login</button>

                                <p>
                                    @Html.ActionLink("Register as a new client", "RegisterClient")
                                </p>
                            </div>
                        </div>
                    }
                </section>
            </div>
            <div id="company" class="tab-pane fade">

                <section id="companyLoginForm">
                    @using (Html.BeginForm("LoginCompany", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-sm-6" style="margin-top: 5px">
                            <div class="ui form">
                                <h3>Sign in to your account</h3>
                                <div class="field">
                                    <label>Email</label>
                                    <div class="ui left icon input">
                                        <input type="email" name="UserName" id="UserName" placeholder="Email" required>
                                        <i class="user icon"></i>
                                    </div>
                                </div>
                                <div class="field">
                                    <label>Password</label>
                                    <div class="ui left icon input">
                                        <input type="password" name="Password" id="Password" placeholder="Password" required>
                                        <i class="lock icon"></i>
                                    </div>
                                </div>

                                <button type="submit" class="ui blue submit button">Login</button>

                                <p>
                                    @Html.ActionLink("Register new company", "RegisterCompany")
                                </p>
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
